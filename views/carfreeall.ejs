<%- include('header') %>
<% page = 'freecars' %>
<%- include('mainheader') %>

<div class="container-mine text-center">
    <a href="/cars/add"><button class="btn btn-primary">Új autó hozzáadása</button></a>
</div>

<div class="text-center">
    <div class="container">
        <h2>Szabad autók:</h2>
        <div class="col-md-push-3 col-md-6 col-xs-12">

            <% cars.forEach(function(car){ %>
            <div>
                <h3><%= car.name%></h3>
                <h3><%= car.plate%></h3>
                <a href="/cars/mod/<%= car._id%>"><button class="btn btn-primary">Részletek</button></a>
                <a href="/cars/del/<%= car._id%>"><button class="btn btn-danger">Törlés</button></a>
            </div>
            <%}); %>

        </div>
    </div>
</div>

<%- include('footer') %>